@using Library.Models
@model Sach
@{
    ViewData["Title"] = "Thêm mới sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h5 class="text-center">Nhập sách mới vào kho</h5>
<hr />
<div class="container">
    <form asp-action="AddNew" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MaSach" class="control-label"></label>
            <input asp-for="MaSach" class="form-control" />
            <span asp-validation-for="MaSach" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TenSach" class="control-label"></label>
            <input asp-for="TenSach" class="form-control" />
            <span asp-validation-for="TenSach" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MatacGia" class="control-label"></label>
            @if (ViewBag.TacGia != null)
            {
                <select class="form-control" asp-for="MatacGia" asp-items="@(new SelectList(ViewBag.TacGia,"Ma","Ten"))"></select>
            }
            <span asp-validation-for="TenSach" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaNhaXuatBan" class="control-label"></label>
            @if (ViewBag.NXB != null)
            {
                <select class="form-control" asp-for="MaNhaXuatBan" asp-items="@(new SelectList(ViewBag.NXB,"Ma","Ten"))"></select>
            }
            <span asp-validation-for="TenSach" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaTheLoai" class="control-label"></label>
            @if (ViewBag.MaTheLoai != null)
            {
                <select class="form-control" asp-for="MaTheLoai" asp-items="@(new SelectList(ViewBag.TheLoai,"Ma","TenTheLoai"))"></select>
            }
            <span asp-validation-for="MaTheLoai" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamXuatBan" class="control-label"></label>
            <input asp-for="NamXuatBan" class="form-control" />
            <span asp-validation-for="NamXuatBan" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Lưu" class="btn btn-primary" />
            @Html.ActionLink("Quay về", "Index", "QuanLyNhaSach", null, new { @class = "btn btn-secondary" })
        </div>
    </form>
</div>