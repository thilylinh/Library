@using Library.Models
@model Sach
@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h5 class="text-center">Sửa thông tin sách</h5>
<hr />
<div class="container">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="TenSach" class="control-label"></label>
            <input asp-for="TenSach" class="form-control" />
            <span asp-validation-for="TenSach" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TacGia" class="control-label"></label>
            <input asp-for="TacGia" class="form-control" />
            <span asp-validation-for="TacGia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TheLoai" class="control-label"></label>
            <input asp-for="TheLoai" class="form-control" />
            <span asp-validation-for="TheLoai" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NhaXuatBan" class="control-label"></label>
            <input asp-for="NhaXuatBan" class="form-control" />
            <span asp-validation-for="NhaXuatBan" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamXuatBan" class="control-label"></label>
            <input asp-for="NamXuatBan" class="form-control" />
            <span asp-validation-for="NamXuatBan" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SoLuong" class="control-label"></label>
            <input asp-for="SoLuong" class="form-control" />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Lưu" class="btn btn-primary" />
            @Html.ActionLink("Quay về", "Index", "QuanLyNhaSach", null, new { @class = "btn btn-secondary" })
        </div>
    </form>
</div>

